nav.navbar.navbar-default
    ul.iconbar.nav
        li(ng-click="goto('me')"): table
                tr: td
                    img(ng-show="path() == 'me'",ng-src="/img/01 mei.svg")
                    img(ng-hide="path() == 'me'",ng-src="/img/01 me.svg")
                tr: td(align="center"): span me
        li(ng-click="goto('give')"): table
                tr: td
                    img(ng-show="path() == 'give'",ng-src="/img/02 givei.svg")
                    img(ng-hide="path() == 'give'",ng-src="/img/02 give.svg")
                tr: td(align="center"): span give
        li(style="position:relative",ng-click="goto('thanx')"): table
                tr: td
                    img(ng-show="path() == 'thanx'",ng-src="/img/03 thanxi.svg")
                    img(ng-hide="path() == 'thanx'",ng-src="/img/03 thanx.svg")
                tr: td(align="center"): span thanx
                div.count(style="position:absolute; background-color:#f88; z-index:1000; border-radius:5px",ng-show="requests.length > 0") &nbsp;{{ requests.length }}&nbsp;
        li(ng-click="goto('get')"): table
                tr: td
                    img(ng-show="path() == 'get'",ng-src="/img/04 geti.svg")
                    img(ng-hide="path() == 'get'",ng-src="/img/04 get.svg")
                tr: td(align="center"): span get
        li(ng-click="goto('us')"): table
                tr: td
                    img(ng-show="path() == 'us'",ng-src="/img/05 usi.svg")
                    img(ng-hide="path() == 'us'",ng-src="/img/05 us.svg")
                tr: td(align="center"): span us
    

    .moneybar(ng-show="showusd",ng-click="showusd = 0")
        p {{ (user.tnx / 100000000 * price || 0) | number:2 }} us$
        p {{ (balance / 100000000 * price || 0) | number:2 }} us$
    .moneybar(ng-hide="showusd",ng-click="showusd = 1")
        p {{ user.tnx }} thanx
        p {{ balance || 0 }} satoshi
  
   
