div(ng-controller="InviteFriendsController",infinite-scroll="loadMoreFriends()")
    center(style="width:100%")
        div
            meter(style="width:80%; text-align:left",value="{{ user.inviteCounter / 10 }}")
            span &nbsp; {{ user.inviteCounter * 10 }}%
        div invite your friends to bitconnect with you!
        div &nbsp;
        div for every friend you invite, both you and your friend will get 54 thanx... just to say thanx :) every tenth friend you invite you will count double!
        div &nbsp;
        div when a friend that you invited signs up, both you and your friend will get up to an additional 5432 thanx. every tenth friend that signs up will also count double!
        div &nbsp;
        div that's a lot of thanx! :)
        div so make sure your friends sign up!
        div &nbsp;
        a.btn(ng-click="kill()") kill account (for testing)
        div &nbsp;
        div(style="width:100%; height: 40px")
            div(style="width:50%; float:left")
                div.bubble.inline.small selected: {{ numselected }}
                div.bubble.inline.small = {{ numselected * 54 }} x
            div(style="width:50%; float:right")
                img.inline(ng-src="/img/lens.png", ng-click="showsearchbar = !showsearchbar")
                a.btn.inline(style="width:20%",ng-hide="numselected == filteredFriends.length",ng-click="selectAll()") all
                a.btn.inline(style="width:20%",ng-show="numselected == filteredFriends.length",ng-click="selectNone()") clear
                a.btn.inline(style="width:20%",ng-click="invite()") invite
        div
            input.form-control(type="text",ng-show="showsearchbar",placeholder="Search",ng-model="searchstring")
            
        .friendsList
            .friend(ng-repeat="(i,friend) in visibleFriends | orderBy:'first_name'")
                img.friendImg(ng-src="{{friend.picture.data.url}}")
                .body
                    .name {{friend.first_name}} {{friend.last_name}}
                    .rightButtons
                        a.get(href="/app/get?fromId={{friend.id}}", title="get", ng-if="friend.isUser")
                            img.actionButton(ng-src="/img/get.svg")
                        a.give(href="/app/give?toId={{friend.id}}", title="give", ng-if="friend.isUser")
                            img.actionButton(ng-src="/img/give.svg")
                        a.invite(title="invite", ng-if="!friend.isUser", ng-click="selectFriend(friend.id)")
                            img.actionButton(ng-src="/img/facebook{{{true: 'i'}[selected[friend.id]]}}.svg")
    include modal
