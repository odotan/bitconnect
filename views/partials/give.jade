.surround(ng-controller="GiveController")
    form.giveget_form.give(name="giveForm", ng-class="{showErrors: showErrors}", novalidate)
        .formField give to:
            input(type="text",ng-model="give.to",typeahead="u as u.fullname for u in getFilteredUsers($viewValue) | limitTo:8", style="width:calc(100% - 60px)",ng-required="true", id="giveTo", name="giveTo")
        div.error(ng-show="showErrors && giveForm.giveTo.$error.required") must specify recipient
        div.error(ng-show="showErrors && giveForm.giveTo.$error.user") recipient must be a person
            span(ng-show="btcmode == 'sat'") &nbsp;or bitcoin address
        .formField(ng-if="!btcmode || btcmode == 'tnx'") number of thanx:
            input(type="number",ng-model="give.tnx", min="1", ng-required="true", style="width:calc(100% - 110px)", name="amount")
        .formField(ng-if="btcmode == 'sat'") number of satoshi:
            input(type="number",ng-model="give.sat",style="width:calc(100% - 115px)", min="1",ng-required="true", name="amount")
        div.error(ng-show="showErrors && (giveForm.amount.$error.required || giveForm.amount.$error.badInput || giveForm.amount.$error.min)") amount must be positive integer
        .formField message:
            input(type="text", ng-model="give.message", style="width:calc(100% - 60px)")
        .submit_btn
            img(ng-click="givemain()", ng-src="/img/give.png")

    include modal